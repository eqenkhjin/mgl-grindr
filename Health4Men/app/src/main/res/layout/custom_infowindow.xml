<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:riv_corner_radius_top_left="60dp"
        app:riv_corner_radius_top_right="60dp"
        app:riv_corner_radius_bottom_left="60dp"
        app:riv_corner_radius_bottom_right="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"
        android:id="@+id/customImageView"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/markerTextView"
        android:background= "#ffffff"
        android:textColor="#434343"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/memberDistanceTextView"
        android:padding="6dp"
        android:layout_marginBottom="10dp"
        android:lines="3"
        android:gravity="center"/>

</LinearLayout>
